<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <table>
      <tr>
        <th>Patient</th>
        <th>Relationship</th>
        <th>Date</th>
        <th>Hospital</th>
        <th>Department</th>
        <th>Time</th>
      </tr>
      <% for(let i = 0; i< apptData.length - 1; i +=1){ %>
      <tr>
        <% for(let j = 0; j< 6; j +=1){ %>
        <th><%= apptData[i][j] %></th>
        <% } %>
        <th>
          <form action="/delete-appt">
            <label for="submit"></label>
            <input
              type="submit"
              id="submit"
              name="<%= apptData[apptData.length - 1][i] %>"
              value="Delete"
            />
          </form>
        </th>
      </tr>
      <% } %>
    </table>
    <form action="/logout?_method=DELETE" method="POST">
      <input type="submit" value="Logout" />
    </form>
  </body>
</html>
